generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lobby {
  id         String      @id @default(cuid())
  host       String
  hostName   String
  settings   Json
  status     LobbyStatus @default(WAITING)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  battle     Battle?
  players    Player[]
  spectators Spectator[]

  @@map("lobbies")
}

model Player {
  id        String   @id @default(cuid())
  name      String
  discordId String?  // Link to user's Discord ID for session tracking
  isHost    Boolean  @default(false)
  isReady   Boolean  @default(false)  // Ready status for battle start
  lobbyId   String
  createdAt DateTime @default(now())
  lobby     Lobby    @relation(fields: [lobbyId], references: [id], onDelete: Cascade)

  @@map("players")
}

model Spectator {
  id        String   @id @default(cuid())
  name      String
  lobbyId   String?
  battleId  String?
  createdAt DateTime @default(now())
  battle    Battle?  @relation(fields: [battleId], references: [id], onDelete: Cascade)
  lobby     Lobby?   @relation(fields: [lobbyId], references: [id], onDelete: Cascade)

  @@map("spectators")
}

model Battle {
  id         String         @id @default(cuid())
  lobbyId    String         @unique
  gameState  Json
  status     BattleStatus   @default(IN_PROGRESS)
  startedAt  DateTime       @default(now())
  endedAt    DateTime?
  actions    BattleAction[]
  lobby      Lobby          @relation(fields: [lobbyId], references: [id], onDelete: Cascade)
  spectators Spectator[]

  @@map("battles")
}

model BattleAction {
  id         String   @id @default(cuid())
  battleId   String
  playerId   String
  actionType String
  actionData Json
  turn       Int
  timestamp  DateTime @default(now())
  battle     Battle   @relation(fields: [battleId], references: [id], onDelete: Cascade)

  @@map("battle_actions")
}

model OnlineUser {
  id         String   @id @default(cuid())
  discordId  String   @unique
  username   String
  avatar     String?
  lastSeen   DateTime @default(now())
  isOnline   Boolean  @default(true)

  @@map("online_users")
}

model User {
  id              String    @id @default(cuid())
  discordId       String    @unique
  discordUsername String
  discordAvatar   String?
  
  // P&W Nation verification
  isVerified      Boolean   @default(false)
  pwNationId      String?   @unique
  pwNationName    String?
  pwNationData    Json?     // Store full nation data
  verifiedAt      DateTime?
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("users")
}

enum LobbyStatus {
  WAITING
  IN_PROGRESS
  COMPLETED
}

enum BattleStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
}
